{
  "compilerOptions": {
    /* Basic Options */
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "spec/*": ["spec/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types"],
    "useUnknownInCatchVariables": false,

    /* Optional Debugging Options */
    "sourceMap": true
  },
  "include": ["src/**/*.ts", "spec/**/*.ts", "build.ts"],
  "exclude": ["dist", "node_modules", "src/public/"]
}
